<div class="container-show">
  <div class="card-show-painting">
      <h2 class="text-center"><%= @painting.name.capitalize %></h2>
      <%= cl_image_tag @painting.photo.key, height: 400, width: 400, crop: :fill, class: "text-center-img" %>
      <p> <%= @painting.description %> </p>
  </div>

  <div class = "container-info">
    <div class="card-show card-show-label">
      <p><i class="fas fa-map-marker-alt"></i> <%= @painting.address %></p>
      <p><i class="far fa-id-badge"></i> <%= @painting.user.first_name %>   -   <i class="far fa-credit-card"></i> <%= @painting.price_per_day %>€/jour</p>
    </div>

    <div class="card-show card-show-label">
      <%= simple_form_for(@booking) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :painting_id, as: :hidden, input_html: { value: @painting.id} %>

      <div class="form-inputs" class="new_paintings">
        <%= f.input :starts_on, label: "Fin",  as: :string, required: false, input_html: {class: "datepicker"}%>
        <%= f.input :ends_on, label: "Début", as: :string, required: false,  input_html: {class: "datepicker"}%>
      </div>


      <div class="form-actions">
        <%= f.button :submit, "Réserver", class: "btn-flat-black "%>
      </div>
    </div>
  </div>
<% end %>
</div>

