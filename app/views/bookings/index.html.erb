  <div class="container-title-bookings">
    <h3>Mes réservations:</h3>
    <h5>Les tableaux que j'ai loué :</h5>
  </div>

<div class="container">
  <div class="card-body-bookings">
  <% @bookings.each do |booking| %>
  <%= link_to painting_path(booking.painting) do %>
    <div class="card-product">
    <%= cl_image_tag booking.painting.photo.key, width: 300, height: 200, crop: :fill, class:"card-img" %>
      <div class="card-product-infos">
        <h2> <%= booking.painting.name %> </h2>
        <p> du <%= booking.starts_on.strftime("%d/%m/%Y") %> au <%= booking.ends_on.strftime("%d/%m/%Y") %> </p>
        <p> <%= booking.state %> </p>
        <p> <i class="far fa-credit-card"></i> <%= booking.total_price %>€</p>
      </div>
    </div>
  <% end %>
  <% end %>
  </div>
</div>
