<div class="banner_margin" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/500x400/?tableau');">
  <div class="banner-content">
    <h1>All Paintings</h1>
    <p>The beautiful paintings</p>
    <a><%= link_to "add a painting", new_painting_path %></a>
    <%#= link_to "Add a cocktail", new_painting_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>



  <div class="container cards-index">
      <% @paintings.each do |painting| %>
    <div class="card-index">

      <%= link_to painting_path(painting) do %>
        <img style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path painting.photo.key, height: 500, width: 400, crop: :fill %>');">
        <div class="card-body">
          <p class="card-text"><%= painting.name %></p>
        </div>
      <% end %>
    </div>
      <% end %>
  </div>


