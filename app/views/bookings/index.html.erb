<div class="title">
  <h1>Mes reservations</h1>
</div>
<div>
  <h2>Les tableaux que j'ai loué :</h2>
</div>
<div class="container container_booking">
  <div class="card mb-3 mt-5 ml-4" style="max-width: 1040px, max-height: 500px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <% @bookings.each do |booking| %>
          <p><%= cl_image_tag booking.painting.photo.key, width: 350, height: 300, crop: :fill%></p>
        <% end %>
      </div>
      <div class="col-md-8">
        <% @bookings.each do |booking| %>
        <div class="card-body booking">
          <h1 class="card-text"><%= booking.painting.name%></h1>
          <p class="card-text">Date de début: <%= booking.starts_on%></p>
          <p class="card-text">Date de fin: <%= booking.ends_on %></p>
          <p class="card-text">Status: <%= booking.state %></p>
          <p class="card-text">Prix: <%= booking.total_price %> par jour</p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div>
  Mes tableaux en location:
</div>



